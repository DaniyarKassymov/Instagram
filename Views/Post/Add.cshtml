@model Instagram.ViewModels.PostVms.PostAddVm

@{
    ViewBag.Title = "Добавление поста";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-img-top text-center pt-3">
            <img 
                src="~/images/instagramLogo.png"
                class="w-50 w-50"
                alt="logo">
        </div>
        <div class="card-body d-flex justify-content-center">
            <form asp-action="Add" method="post" asp-controller="Post" enctype="multipart/form-data">
                <div class="form-group">
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <input type="file" asp-for="Image" class="form-control my-2 text-muted">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea asp-for="Description" class="form-control my-2 text-muted" placeholder=@ViewData["Post's description"]></textarea>
                </div>
                <input type="submit" class="btn btn-info w-100 mt-3 text-white" value=@ViewData["Create"]>
                <input type="hidden" asp-for="UserId" value="@Model.UserId">
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}