<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Instagram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <script src="https://kit.fontawesome.com/5b1701ac73.js" crossorigin="anonymous"></script>
</head>
<body>
<header class="border-bottom">
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="collapse navbar-collapse justify-content-between" 
                 id="navbarSupportedContent">
                <a asp-action="Index" asp-controller="User">
                    <img src="~/images/mainPageLogo.png" width="180" height="60" alt="logo">
                </a>
                <form asp-action="FoundedUsers" asp-controller="User" method="post" class="form-inline my-2 my-lg-0 search_form">
                    <input class="form-control mr-sm-2 search_input" type="search" aria-label="Search" name="fieldName">
                </form>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a asp-action="PersonalCabinet" asp-controller="User"
                           class="nav-link me-2">
                            <i class="fa-regular fa-user"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    }
</header>
<div class="container">
    <main role="main" class="mt-5">
        @RenderBody()
    </main>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>