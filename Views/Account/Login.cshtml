@model Instagram.ViewModels.UserVms.LoginVm

@{
    var title = ViewData["Authorize"];
    ViewBag.Title = title;
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-img-top text-center pt-3">
            <img 
                src="~/images/instagramLogo.png"
                class="w-50 w-50"
                alt="logo">
        </div>
        <div class="card-body d-flex justify-content-center">
            <form asp-action="Login" method="post" asp-controller="Account">
                <div class="form-group">
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                    <input asp-for="EmailOrUserName" class="form-control my-2 text-muted" placeholder=@ViewData["Username or email"]>
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="form-control my-2 text-muted" placeholder=@ViewData["Password"]>
                </div>
                <input type="submit" class="btn btn-info w-100 mt-3 text-white" value=@ViewData["Authorize"]>
            </form>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center text-center mt-2">
    <div class="card p-3" style="width: 18rem;">
        <div class="card-text">
            @ViewData["Don't you have an account yet?"] <a class="text-decoration-none" asp-action="Register" asp-controller="Account">@ViewData["Register"]</a>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}