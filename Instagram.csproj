<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="8.0.3" />
      <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.3">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="8.0.2" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\Controllers.AccountController.ru.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Controllers.AccountController.ru.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Controllers.AccountController.en.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Controllers.AccountController.en.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Controllers.UserController.ru.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Controllers.UserController.ru.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Controllers.UserController.en.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Controllers.UserController.en.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\Controllers.AccountController.ru.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Controllers.AccountController.ru.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Controllers.AccountController.en.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Controllers.AccountController.en.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Controllers.UserController.ru.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Controllers.UserController.ru.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Controllers.UserController.en.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Controllers.UserController.en.resx</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
